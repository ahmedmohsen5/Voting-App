pipeline {
    agent any
    
    environment {
        DOCKER_REPO = "ahmed5555555555"
    }
    
    stages {
        
        stage('Build Docker Images') {
            steps {
                script {
                    def services = '''[
                        [name: 'result', buildCmd: 'mvn clean package', testCmd: 'mvn test'],
                        [name: 'vote', buildCmd: 'npm install', testCmd: 'npm test'],
                        [name: 'worker', buildCmd: 'go build ./...', testCmd: 'go test ./...']
                    ]'''
                    
                    // Build Docker images for each microservice
                    services.each { service ->
                        dir(service.name) {
                            echo "Building Docker image for ${service.name}..."
                            //sh "docker build -t ${DOCKER_REPO}/${service.name}:${env.BUILD_NUMBER} ."
                        }
                    }
                }
            }
        }
        
        stage('Push Docker Images') {
            steps {
                script {
                    def services = [
                        [name: 'result'],
                        [name: 'vote'],
                        [name: 'worker']
                    ]
                    
                    // Push Docker images to registry
                    services.each { service ->
                        echo "Pushing Docker image for ${service.name}..."
                        //sh "docker push ${DOCKER_REPO}/${service.name}:${env.BUILD_NUMBER}"
                    }
                }
            }
        }
    }
}